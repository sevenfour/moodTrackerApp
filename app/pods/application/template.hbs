{{#if session.isAuthenticated}}
    <input type="checkbox" id="drawer-toggle" name="drawer-toggle">
    <label for="drawer-toggle" class="drawer-toggle-label">
        <span class="sr-only">{{t 'drawerMenu.toggleNav'}}</span>
        {{inline-svg 'icon-menu-mobile' class='icon-sandwich'}}
    </label>
    {{app-header
        imgSource='logo'}}
    {{drawer-menu
        userFirstName=model.user.firstName
        isSaving=isSaving
        switchLanguage=(route-action 'switchLanguage')
        logout=(route-action 'logout')}}
{{else}}
    {{inline-svg 'logo' class='starling-logo on-login'}}
{{/if}}
<div class="page-content">
    {{outlet}}
</div>
{{toast-message
    errorMessage=errorMessage
    successMessage=successMessage}}
{{toast-update-ready
    message='New version available'}}
