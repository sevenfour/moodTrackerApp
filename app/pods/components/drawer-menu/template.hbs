<ul class="navbar-drawer-list {{if (is-equal i18n.locale 'fr') 'fr'}}">
    <li class="navbar-drawer-item">
        {{#link-to 'moods.add' class='navbar-link'}}
            {{t 'appHeader.moodTracker'}}
        {{/link-to}}
    </li>
    <li class="navbar-drawer-item">
        {{#link-to 'moods.list' class='navbar-link'}}
            {{t 'appHeader.moodHistory'}}
        {{/link-to}}
